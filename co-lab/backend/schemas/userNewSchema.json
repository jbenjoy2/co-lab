{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "http://example.com/example.json",
    "type": "object",
    "required": [
        "username",
        "password",
        "firstName",
        "lastName",
        "email"
    ],
    "properties": {
        "username": {
            "$id": "#/properties/username",
            "type": "string",
            "minLength":1,
            "maxLength": 25
        },
        "password": {
            "$id": "#/properties/password",
            "type": "string",
            "minLength":8
        },
        "firstName": {
            "$id": "#/properties/firstName",
            "type": "string",
            "minLength":1
        },
        "lastName": {
            "$id": "#/properties/lastName",
            "type": "string",
            "minLength":1
        },
        "email": {
            "$id": "#/properties/email",
            "type": "string",
            "minLength":6,
            "maxLength": 40,
            "format": "email"
        }
    },
    "additionalProperties": false
}